@model RosteringSystem.ViewModels.StaffViewModel
@{
    ViewBag.Title = "Staff";
}
@Scripts.Render("~/Scripts/StaffViewModel.js")
<h2>Add a New Staff</h2>
@using (Html.BeginForm("Staff", "Index", FormMethod.Post, new { onsubmit = "return AddNewStaff()", id="form-add"}))
{
    <table>
        <tr>
            <td>@Html.LabelFor(m=>m.FirstName)</td>
            <td>@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })</td>
            <td>@Html.LabelFor(m => m.LastName)</td>
            <td>@Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })</td>
            <td>@Html.DropDownListFor(m=>m.RoleIdSelected, new SelectList(Model.RoleList, "Id", "Name"), "----Select Role----", new { @class = "form-control" })</td>
            <td><input type="submit" class="btn btn-info" value="Add"></td>
        </tr>
    </table>
}

<h3>Staff List</h3>
<!--------DIV FOR STAFF LIST-----AJAX UPDATE-------------------->
<div class="v2-staff-list-div"></div>
