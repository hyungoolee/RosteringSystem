@model RosteringSystem.ViewModels.StaffViewModel
@{
    Layout = null;
}
@using (Html.BeginForm("", "", FormMethod.Post, new { onsubmit = "return UpdateStaff()", id = "form-update" }))

{
 <div style="border: 2px solid black; padding: 10px 20px; margin: 40px 40px;">
        <div class="form-group">
            @Html.HiddenFor(m => m.Id)
            @Html.LabelFor(m => m.FirstName)
            <input type="text" value="@Html.ValueFor(m => m.FirstName)" name="F_name" class="form-control" />
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName)
            <input type="text" value="@Html.ValueFor(m => m.LastName)" name="L_name" class="form-control" />
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.RoleList)
            @Html.DropDownListFor(m => Model.RoleIdSelected, new SelectList(Model.RoleList, "Id", "Name"), "--------Select Role--------", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Update">
        </div>
 </div>
}
