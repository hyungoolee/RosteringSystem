@model RosteringSystem.ViewModels.StaffViewModel
@{
    Layout = null;
}
@Scripts.Render("~/bundles/jquery")
<table id="v2-staff-list-table" class="table table-bordered table-hover">
    <tr>
        <th>Staff ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Role</th>
        <th colspan="2">Action</th>
    </tr>
    <tbody>
        @foreach (var s in Model.StaffList)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                <td>@s.Role.Name</td>
                <td><button onclick="return DeleteStaff(@s.Id)" class="btn btn-danger">Delete</button></td>
                <td><button onclick="return PopUpData(@s.Id)" class="btn btn-info">Update</button></td>
            </tr>
        }
    </tbody>
</table>
